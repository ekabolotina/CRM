{% extends 'base.html.twig' %}

{% block page_title %}Новый филиал{% endblock page_title %}

{% block foot_scripts %}
  {{ parent() }}
  <script type="text/javascript" src="/static/js/add_branch.js"></script>
{% endblock foot_scripts %}

{% block content %}
  <h2>Новый филиал <a href="/admin" class="btn btn-info">Все филиалы</a></h2>

  <form class="ajaxForm form-horizontal" action="/admin/api/branch/add" role="form" style="margin-top: 30px;" id="addBranchForm" callback-after="addBranchFormCallbackAfter">
    <div class="form-group">
      <label for="branch_name" class="col-sm-2 control-label">Название филиала</label>
      <div class="col-sm-5">
        <input name="branch_name" type="text" class="form-control" placeholder="Автопрокат №1" require>
      </div>
    </div>

    <div class="form-group">
      <label for="branch_email" class="col-sm-2 control-label">E-mail</label>
      <div class="col-sm-5">
        <input name="branch_email" type="email" class="form-control" placeholder="example@mail.ru" require>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-5 col-sm-push-2">
        <input type="submit" class="btn btn-primary" value="Создать филиал">
      </div>
    </div>
  </form>
{% endblock content %}
