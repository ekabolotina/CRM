{% extends 'base.html.twig' %}

{% block page_title %}Панель администратора{% endblock page_title %}

{% block content %}

  <h2>Панель администратора</h2>
  <hr>

  <h3>Компании <a href="/admin/company/add" class="btn btn-success">Добавить новую</a></h3>

  {% if companies|length %}
    {% set count = 0 %}
    <div class="row">
      <div class="col-md-6">
        <table class="table table-striped">
          <thead>
            <th></th>
            <th>Наименование компании</th>
            <th>Количество филиалов</th>
            <th></th>
          </thead>
          <tbody>
            {% for company in companies %}
              {% set count = count+1 %}
              <tr>
                <td>{{ count }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.branches_count }}</td>
                <td><a href="/admin/company/?id={{ company.id }}">Подробнее</a></td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>

  {% endif %}

{% endblock content %}
